import java.util.Scanner;

public class QuizGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int score = 0;

    
        System.out.println("Столица Германии?");
        System.out.println("A) Берлин");
        System.out.println("B) Париж");
        System.out.println("C) Мадрид");
        System.out.println("D) Рим");
        System.out.print("Ваш ответ: ");
        String answer1 = scanner.nextLine();
        if(answer1.equalsIgnoreCase("A")) {
            System.out.println("Правильно!\n");
        } else {
            System.out.println("Неправильно.\n");
        }

        
        System.out.println("Кто изобрёл первую компьютерную мышь?");
        System.out.println("A) Дуглас Энгельбард");
        System.out.println("B) Пушкин");
        System.out.println("C) Брежнев");
        System.out.println("D) Наполеон");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer2 = scanner.nextLine();
        if(answer2.equalsIgnoreCase("A")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }

        
        System.out.println("Почему вода кипит быстрее на вершине горы Эльбрус?");
        System.out.println("A) там меньше кислорода");
        System.out.println("B) температура воздуха там выше");
        System.out.println("C) атмосферное давление ниже");
        System.out.println("D) вода нагривается сильнее солнечными лучами");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer3 = scanner.nextLine();
        if(answer3.equalsIgnoreCase("C")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }
    
        
        System.out.println("Какой музыкальный инструмент звучит громче всего среди классических инструментов оркестра?");
        System.out.println("A) труба");
        System.out.println("B) скрипка");
        System.out.println("C) литавры");
        System.out.println("D) орган");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer4 = scanner.nextLine();
        if(answer4.equalsIgnoreCase("D")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }    
        

        
        System.out.println("Сколько ног у сороконожки");
        System.out.println("A) 40");
        System.out.println("B) 10-750");
        System.out.println("C) 50-150");
        System.out.println("D) 69");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer5 = scanner.nextLine();
        if(answer5.equalsIgnoreCase("B")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }
     
        System.out.println("Сколько минут длится самая короткая война в истории человечества?");
        System.out.println("A) 3 минуты");
        System.out.println("B) 38 минут");
        System.out.println("C) 3 часа");
        System.out.println("D) 40 секунд");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer6 = scanner.nextLine();
        if(answer6.equalsIgnoreCase("B")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }
     
        System.out.println("Сколько метров высота статуи Свободы вместе с постаментом?");
        System.out.println("A) 46 метров");
        System.out.println("B) 93 метра");
        System.out.println("C) 111 метров");
        System.out.println("D) 153 метра");
        System.out.print("Ваш ответ (буква A, B, C или D): ");
        String answer7 = scanner.nextLine();
        if(answer7.equalsIgnoreCase("B")) {
            System.out.println("Правильно!\n");
            score++;
        } else {
            System.out.println("Неправильно.\n");
        }
    }
}
